{{! https://developers.facebook.com/docs/reference/opengraph/object-type/article/ }}
{{! https://developers.facebook.com/tools/debug/og/ }}
<meta property='og:title' content='{{post.name}}'/>
<meta property='fb:app_id' content='{{config.facebook.appID}}'/>
<meta property='fb:admins' content='{{config.facebook.adminID}}' />
<meta property='og:url' content='{{config.site.url}}/{{post.slug}}/'/>
<meta property='og:image' content='{{post.bigThumbURL}}'/>
<meta property='og:type' content='article'/>
<meta property='article:published_time' content='{{formatISO8601 post.createdOn}}'/>
<meta property='article:modified_time' content='{{formatISO8601 post.updatedOn}}'/>
<meta property='article:author' content='{{config.facebook.authorURL}}'/>
{{#if video}}
<meta property='og:video' content='http://youtu.be/{{post.video.id}}'/>
{{/if}}
